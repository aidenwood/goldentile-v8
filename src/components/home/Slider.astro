<!-- CSS -->
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">

<!-- JavaScript -->
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

<style>
  .carousel-cell {
  height: 460px; /* height of carousel */
  margin-right: 10px;
}
</style>

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-16">
      <div class="flex flex-col items-start gap-8 sm:gap-10">
        <div class="flex max-w-xl flex-col items-start gap-4 sm:gap-6">
          <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">
            Our Tiling Work.
          </h2>
          <p class="text-primary-950/70 dark:text-primary-200/70 text-lg sm:text-xl">
            Images of my previous work from around the greater Brisbane and Gold Coast area. I am happy to travel.
          </p>
        </div>
        <a
          href="/pricing"
          class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Get a Quote
        </a>
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:max-w-full lg:px-8">
    <div class="carousel" data-flickity='{ "freeScroll": true }'>
      <div class="carousel-cell">
        <img
          class="h-auto rounded-3xl"
          width="920"
          height="460"
          src="/assets/slate-tile-sml.webp"
          alt="Hero picture - Slate Tiling by Golden Tile for a Gold Coast client"
        />
      </div>
      <div class="carousel-cell">
        <img
          class="h-auto rounded-3xl"
          width="920"
          height="460"
          src="/assets/pool-sml.webp"
          alt="Hero picture - Bathroom Tiling by Golden Tile for a Gold Coast client"
        />
      </div>
      <div class="carousel-cell">
        <img
          class="h-auto rounded-3xl"
          width="920"
          height="460"
          src="/assets/lounge-room-tile-sml.webp"
          alt="Hero picture - Lounge Room and Living Room large format Tiling by Golden Tile for a Gold Coast client"
        />
      </div>
      <div class="carousel-cell">
        <img
          class="h-auto rounded-3xl"
          width="920"
          height="460"
          src="/assets/stone-tile-sml.webp"
          alt="Hero picture - Stone Tiling by Golden Tile for a Gold Coast client"
        />
      </div>
    </div>
  </div>
</section>
